@model BSIT3L_Movies.Models.MovieViewModel


<!DOCTYPE html>
<html>
<head>
    <title>Movie</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }

        h2 {
            background-color: #333;
            color: #fff;
            padding: 10px;
            text-align:center
        }

        .movie-details {
            background-color: #fff;
            max-width: 400px;
            margin: 20px auto;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        }

         .p {
            margin: 10px 0;
            font-size: 1em;
            width: 50%;
            margin-left: 10px;
            padding: 10px;
            padding-bottom:0;
        }

        .h2Container {
            background-color: lightblue;
            font-size: 2.5em;
        }

        .pContainer {
            display: flex;
            
        }

        img {
            object-fit:fill;
            height:250px;
            width:150px;
        }
    </style>
</head>
<body>
    <div class="h2Container"><h2 class="text-xl-center">Movie Details</h2></div>
    <div class="pContainer">
        <img src="@Url.Content(Model.Image)" />
        <div class="p">
          
     <p>Movie ID: @Model.Id</p>
    <p>Movie Name: @Model.Name</p>
    <p>Rating: @Model.Rating</p>
    <p>Release Year: @Model.ReleaseYear</p>
    <p>Genre: @Model.Genre</p>
   
    </div>
        <iframe width="560" height="315" src="@Model.Trailer" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay;
clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
    </div>
    @* <div class="card-img">
    <img src= "@Url.Content(Model.Image)" />
    </div> *@
</body>
</html>